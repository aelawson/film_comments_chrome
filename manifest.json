{
	"manifest_version" : 2,
	"name" : "film_comments_chrome",
	"description" : "Serve Netflix content identifiers and corresponding timestamps.",
	"version" : "0.1",
	"permissions" : [
		"activeTab",
		"https://ajax.googleapis.com/"
	],
	"content_scripts" : [
		{
			"all_frames": true,
			"matches": [
				"http://*.netflix.com/*",
				"https://*.netflix.com/*"
			],
			"js" : ["lib/jquery.min.js", "index.js"]
		}
	],
	"background" : {
		"scripts" : ["background.js"]
	}
}
